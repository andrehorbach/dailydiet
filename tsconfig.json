{
  "extends": "expo/tsconfig.base",
  "types": ["jest", "styled-components-react-native"],
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@assets/*": [
        "./src/assets/*",
      ],
      "@contexts/*": [
        "./src/contexts/*",
      ],
      "@components/*": [
        "./src/components/*",
      ],
      "@screens/*": [
        "./src/screens/*",
      ],
      "@storage/*": [
        "./src/storage/*",
      ],
      "@theme/*": [
        "./src/theme/*",
      ],
      "@utils/*": [
        "./src/utils/*",
      ],     
    }
  }
}